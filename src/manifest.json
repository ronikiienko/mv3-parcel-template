{
    "manifest_version": 3,
    "name": "Template extension",
    "version": "0.0.1",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}